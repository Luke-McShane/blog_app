<h1>All Tags</h1>

<ul id="tags">
    <% @tags.each do |tag| %>
        <li>
            <h5><%= link_to tag.name, tag_path(tag) %></h5>
            <%= link_to "Delete Tag", tag_path(tag), method: :delete, data: {confirm: "Really delete this tag   ?"} %>
            </br>
        </li>
    <% end %>
</ul>
<br/>
<%= link_to '<< Back to Articles', articles_path %>